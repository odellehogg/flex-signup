{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "functions": {
    "app/api/**/*.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/reengagement",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/pause-reminders",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/sla-check",
      "schedule": "0 */4 * * *"
    }
  ]
}
